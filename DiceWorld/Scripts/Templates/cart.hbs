<div class="container">
    <h1>Cart</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each cartItem in model.cartItems}}
            {{#link-to 'boardGame' cartItem.boardGame tagName="tr"}}
                <td>{{cartItem.boardGame.name}}</td>
                <td class="text-center">{{cartItem.quantity}}</td>
                <td class="text-center">{{cartItem.boardGame.price}}</td>
            {{/link-to}}
            {{/each}}
        </tbody>
    </table>
</div>