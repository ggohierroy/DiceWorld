
<div class="container">
        
    <div class="row">
        <div class="col-sm-2">
            <ul class="nav nav-pills nav-stacked">
                {{#each page in pages}}
                <li class="{{if page.isActive 'active'}}" role="presentation"><a href="javascript:undefined" {{action 'navigate' page}}>{{page.name}}</a></li>
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-10">
            {{outlet}}
        </div>
    </div>
</div>